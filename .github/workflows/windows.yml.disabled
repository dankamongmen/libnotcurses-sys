permissions:
  contents: read

# runs on push to the main branch, and PRs
on:
  push:
    branches: [main]
  pull_request:

name: windows build

jobs:
  #
  build:
    name: "ğŸ stable build"
    runs-on: windows-latest
    defaults:
      run:
        shell: msys2 {0}

    steps:
      - name: "ğŸ¦€ libnotcurses-sys checkout"
        uses: actions/checkout@v3
        with:
          fetch-depth: 0
          # submodules: true

      - name: "install rust stable"
        uses: dtolnay/rust-toolchain@stable

      - name: "cargo build"
        run: cargo build

